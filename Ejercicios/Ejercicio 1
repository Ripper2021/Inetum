pipeline
{
    agent any
    stages
    {
        stage("Suma")
        {
            steps
            {
                script
                {
                    numero1 = 100
                    numero2= 100
                    suma = numero1+numero2
                    println suma
                }
            }
        }
        
        stage("Resta")
        {
            steps
            {
                script
                {
                    resta = numero1-numero2
                    println resta
                }
            }
        }
        
        stage("Multiplicacion")
        {
            steps
            {
                script
                {
                    multiplicacion = numero1* numero2
                    println multiplicacion
                }
            }
        }
        
        stage("Division")
        {
            steps
            {
                script
                {
                    division = numero1 / numero2
                    println division
                }
            }
        }
    }
    
    
}
